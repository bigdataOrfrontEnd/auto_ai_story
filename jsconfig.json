{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@components/*": ["src/components/*"],
        "@pages/*": ["src/pages/*"],
        "@router/*": ["src/router/*"],
        "@layouts/*": ["src/layouts/*"],
        "@context/*": ["src/context/*"],
        "@services/*": ["services/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }